<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/Key"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonHeavy"
        android:layout_centerHorizontal="true"
        android:text="@string/Style"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonCalm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonMaj"
        android:layout_below="@+id/buttonMaj"
        android:layout_marginTop="36dp"
        android:text="@string/Calm" />

    <TextView
        android:id="@+id/Key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textKey"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="A"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Key"
        android:layout_alignBottom="@+id/Key"
        android:layout_alignRight="@+id/buttonMaj"
        android:text="@string/Prev" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Key"
        android:layout_alignBottom="@+id/Key"
        android:layout_alignLeft="@+id/buttonMin"
        android:text="Next" />

    <Button
        android:id="@+id/buttonMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMode"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textStyle"
        android:text="@string/Minor" />

    <Button
        android:id="@+id/buttonMaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonMin"
        android:layout_alignBottom="@+id/buttonMin"
        android:layout_toLeftOf="@+id/textStyle"
        android:text="@string/Major" />

    <Button
        android:id="@+id/buttonHeavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonMin"
        android:layout_alignTop="@+id/buttonCalm"
        android:text="@string/Heavy" />

    <TextView
        android:id="@+id/textMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textStyle"
        android:layout_below="@+id/buttonPrev"
        android:layout_marginTop="24dp"
        android:text="@string/Mode"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonRandomize"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonRandomize"
        android:layout_marginBottom="51dp"
        android:text="@string/Play" />

    <Button
        android:id="@+id/buttonRandomize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonPlay"
        android:layout_alignRight="@+id/textStyle"
        android:text="@string/Randomize" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonRandomize"
        android:layout_alignBottom="@+id/buttonRandomize"
        android:layout_alignRight="@+id/buttonExit"
        android:layout_toRightOf="@+id/textKey"
        android:text="@string/Clear" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonPlay"
        android:layout_alignBottom="@+id/buttonPlay"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:layout_toRightOf="@+id/textKey"
        android:text="@string/Exit" />

    <TextView
        android:id="@+id/textWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonExit"
        android:layout_toLeftOf="@+id/buttonMin"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>