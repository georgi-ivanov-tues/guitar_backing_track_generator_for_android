<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guitarbacktrackgenerator"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.guitarbacktrackgenerator.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.truiton.youtubeapi.VideoPlayer"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
          
        </activity>
        
         <activity 
            android:name=".GenerateMenu" 
            android:label="Generate"
            android:screenOrientation="portrait">
        </activity>
        
         <activity 
            android:name=".FavouritesMenu" 
            android:label="Favourites"
            android:screenOrientation="portrait">
        </activity>
         
        <activity 
            android:name=".OptionsMenu" 
            android:label="Options"
            android:screenOrientation="portrait">
        </activity>
         
          <activity 
            android:name=".CreditsMenu" 
            android:label="Credits"
            android:screenOrientation="portrait">
        </activity>
         
          <activity 
            android:name=".VideoPlayer" 
            android:label="VideoPlayer"
            android:screenOrientation="portrait">
        </activity>
        
         <activity 
            android:name=".MusicPlayer" 
            android:label="MusicPlayer"
            android:screenOrientation="portrait">
        </activity>
          
    </application>

</manifest>